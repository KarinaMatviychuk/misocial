                    p.center-block__about Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.

                div.center-img
                    div.wrapper
                        +img('img/photo-first.png', '0', '/month')
                        +img('img/photo-second.png', '29', '/month')
                        +img('img/photo-third.png', '49', '/month')


            div.img-block
                div.img-block__info
                    p.img-block__about SOCAL MARKETING & ANALYTICS
                    p.img-block__about Take control of your data
                    div.img-block__buttons
                        p.img-block__buttons--about GET STARTED
                        p.img-block__buttons--about EXPLORE FEATURES


        include components/footer.pug


            



    